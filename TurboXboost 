interface GameProfilesProps {
  onProfileSelect: (profile: GameProfile) => void;
}

const GameProfiles = ({ onProfileSelect }: GameProfilesProps) => {
  const [isOpen, setIsOpen] = useState(false);
  const [selectedProfile, setSelectedProfile] = useState<GameProfile | null>(null);

  const handleSelect = (profile: GameProfile) => {
    setSelectedProfile(profile);
    setIsOpen(false);
    onProfileSelect(profile);
  };

  return (
    <motion.div
      className="gaming-card cyber-border"
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
    >
      <div className="flex items-center gap-3 mb-4">
        <div className="p-2 rounded-lg bg-secondary/20 border border-secondary/30">
          <Gamepad2 className="w-5 h-5 text-secondary" />
        </div>
        <div>
          <h3 className="font-display font-bold text-foreground">Game Profiles</h3>
          <p className="text-xs text-muted-foreground">Optimized settings for popular games</p>
        </div>
      </div>

      {/* Dropdown trigger */}
      <Button
        variant="outline"
        className="w-full justify-between"
        onClick={() => setIsOpen(!isOpen)}
      >
        <span className="flex items-center gap-2">
          {selectedProfile ? (
            <>
              <span>{selectedProfile.icon}</span>
              <span>{selectedProfile.name}</span>
            </>
          ) : (
            "Select a game profile"
          )}
        </span>
        <motion.div animate={{ rotate: isOpen ? 180 : 0 }}>
          <ChevronDown className="w-4 h-4" />
        </motion.div>
      </Button>

      {/* Dropdown menu */}
      <AnimatePresence>
        {isOpen && (
          <motion.div
            initial={{ opacity: 0, height: 0 }}
            animate={{ opacity: 1, height: "auto" }}
            exit={{ opacity: 0, height: 0 }}
            className="mt-3 space-y-2 overflow-hidden"
          >
            {gameProfiles.map((profile, index) => (
              <motion.button
                key={profile.id}
                initial={{ opacity: 0, x: -20 }}
                animate={{ opacity: 1, x: 0 }}
                transition={{ delay: index * 0.05 }}
                onClick={() => handleSelect(profile)}
                className={`w-full p-3 rounded-lg border border-border bg-muted/30 hover:bg-muted/50 transition-all duration-200 text-left group ${
                  selectedProfile?.id === profile.id ? "border-primary bg-primary/10" : ""
                }`}
              >
                <div className="flex items-center gap-3">
                  <div
                    className={`w-10 h-10 rounded-lg bg-gradient-to-br ${profile.color} flex items-center justify-center text-xl`}
                  >
                    {profile.icon}
                  </div>
                  <div className="flex-1">
                    <p className="font-display font-semibold text-foreground">{profile.name}</p>
                    <p className="text-xs text-muted-foreground">{profile.description}</p>
                  </div>
                  {selectedProfile?.id === profile.id && (
                    <Check className="w-5 h-5 text-primary" />
                  )}
                </div>
              </motion.button>
            ))}
          </motion.div>
        )}
      </AnimatePresence>

      {/* Selected profile details */}
      <AnimatePresence>
        {selectedProfile && !isOpen && (
          <motion.div
            initial={{ opacity: 0, y: 10 }}
            animate={{ opacity: 1, y: 0 }}
            exit={{ opacity: 0 }}
            className="mt-4 p-3 rounded-lg bg-muted/30 border border-border"
