[03/12, 8:04â€¯pm] DuraiyammalG: import { useState, useEffect, useCallback } from "react";
import { motion, AnimatePresence } from "framer-motion";
import { Wifi, Play, RotateCcw } from "lucide-react";
import { Button } from "./ui/button";

interface PingData {
  time: number;
  value: number;
}

const PingTest = () => {
  const [isTesting, setIsTesting] = useState(false);
  const [pingData, setPingData] = useState<PingData[]>([]);
  const [stats, setStats] = useState({ min: 0, max: 0, avg: 0 });
  const [grade, setGrade] = useState<string | null>(null);

  const generatePing = useCallback(() => {
    // Simulate realistic ping values
    const base = Math.random() * 30 + 15; // 15-45ms base
    const spike = Math.random() > 0.85 ? Math.random() * 50 : 0; // Occasional spikes
    return Math.floor(base + spike);
  }, []);

  useEffect(() => {
    let interval: NodeJS.Timeout;

    if (isTesting && pingData.length < 20) {
      interval = setInterval(() => {
        const newPing = generatePing();
        setPingData((prev) => [...prev, { time: Date.now(), value: newPing }]);
      }, 200);
    } else if (pingData.length >= 20) {
      setIsTesting(false);
      calculateStats();
    }

    return () => clearInterval(interval);
  }, [isTesting, pingData.length, generatePing]);

  const calculateStats = () => {
    const values = pingData.map((d) => d.value);
    const min = Math.min(...values);
    const max = Math.max(...values);
    const avg = Math.floor(values.reduce((a, b) => a + b, 0) / values.length);

    setStats({ min, max, avg });

    // Calculate grade
    if (avg < 30) setGrade("A");
    else if (avg < 50) setGrade("B");
    else if (avg < 80) setGrade("C");
    else setGrade("D");
  };

  const startTest = () => {
    setPingData([]);
    setGrade(null);
    setStats({ min: 0, max: 0, avg: 0 });
    setIsTesting(true);
  };

  const gradeColors: Record<string, string> = {
    A: "text-accent bg-accent/20 border-accent",
    B: "text-primary bg-primary/20 border-primary",
    C: "text-warning bg-warning/20 border-warning",
    D: "text-destructive bg-destructive/20 border-destructive",
  };

  const getRecommendation = () => {
    if (!grade) return null;
    if (grade === "A" || grade === "B") return "WiFi is stable â€” ready for gaming!";
    return "Consider using Mobile Data for a more stable match.";
  };

  return (
    <motion.div
      className="gaming-card cyber-border"
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
    >
      <div className="flex items-center justify-between mb-4">
        <div className="flex items-center gap-3">
          <div className="p-2 rounded-lg bg-primary/20 border border-primary/30">
            <Wifi className="w-5 h-5 text-primary" />
          </div>
          <div>
            <h3 className="font-display font-bold text-foreground">Ping Test</h3>
            <p className="text-xs text-muted-foreground">Real-time network analysis</p>
          </div>
        </div>
        {grade && (
          <motion.div
            initial={{ scale: 0 }}
            animate={{ scale: 1 }}
            className={`w-12 h-12 rounded-xl border-2 flex items-center justify-center font-display font-bold text-2xl ${gradeColors[grade]}`}
          >
            {grade}
          </motion.div>
        )}
      </div>

      {/* Ping graph */}
      <div className="h-24 bg-muted/30 rounded-lg border border-border p-2 mb-4 overflow-hidden">
        <svg className="w-full h-full" viewBox="0 0 200 60" preserveAspectRatio="none">
          {/* Grid lines */}
          {[0, 20, 40, 60].map((y) => (
            <line
              key={y}
              x1="0"
              y1={y}
              x2="200"
              y2={y}
              stroke="hsl(var(--border))"
              strokeWidth="0.5"
            />
          ))}

          {/* Ping line */}
          {pingData.length > 1 && (
            <motion.path
              d={pingData
                .map((d, i) => {
                  const x = (i / 19) * 200;
                  const y = 60 - (d.value / 100) * 60;
                  return `${i === 0 ? "M" : "L"} ${x} ${Math.max(0, Math.min(60, y))}`;
                })
                .join(" ")}
              fill="none"
              stroke="hsl(var(--primary))"
              strokeWidth="2"
              initial={{ pathLength: 0 }}
              animate={{ pathLength: 1 }}
            />
          )}

          {/* Data points */}
          {pingData.map((d, i) => {
            const x = (i / 19) * 200;
            const y = 60 - (d.value / 100) * 60;
            return (
              <motion.circle
                key={i}
                cx={x}
                cy={Math.max(2, Math.min(58, y))}
                r="3"
                fill="hsl(var(--primary))"
                initial={{ scale: 0 }}
                animate={{ scale: 1 }}
              />
            );
          })}
        </svg>
      </div>

      {/* Stats */}
      <AnimatePresence>
        {stats.avg > 0 && (
          <motion.div
            initial={{ opacity: 0, y: 10 }}
            animate={{ opacity: 1, y: 0 }}
            className="grid grid-cols-3 gap-2 mb-4"
          >
            <div className="text-center p-2 rounded-lg bg-accent/10 border border-accent/30">
              <p className="text-xs text-muted-foreground">Min</p>
              <p className="font-display font-bold text-accent">{stats.min}ms</p>
            </div>
            <div className="text-center p-2 rounded-lg bg-primary/10 border border-primary/30">
              <p className="text-xs text-muted-foreground">Avg</p>
              <p className="font-display font-bold text-primary">{stats.avg}ms</p>
            </div>
            <div className="text-center p-2 rounded-lg bg-warning/10 border border-warning/30">
              <p className="text-xs text-muted-foreground">Max</p>
              <p className="font-display font-bold text-warning">{stats.max}ms</p>
            </div>
          </motion.div>
        )}
      </AnimatePresence>

      {/* Recommendation */}
      <AnimatePresence>
        {grade && (
          <motion.p
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            className="text-sm text-center text-muted-foreground mb-4 p-2 rounded-lg bg-muted/30"
          >
            âœ“ {getRecommendation()}
          </motion.p>
        )}
      </AnimatePresence>

      {/* Action button */}
      <Button
        variant={isTesting ? "outline" : "neon"}
        className="w-full"
        onClick={startTest}
        disabled={isTesting}
      >
        {isTesting ? (
          <>
            <motion.div
              animate={{ rotate: 360 }}
              transition={{ duration: 1, repeat: Infinity, ease: "linear" }}
            >
              <RotateCcw className="w-4 h-4" />
            </motion.div>
            Testing... ({pingData.length}/20)
          </>
        ) : (
          <>
            <Play className="w-4 h-4" />
            {grade ? "Test Again" : "Start Ping Test"}
          </>
        )}
      </Button>
    </motion.div>
  );
};

export default PingTest;
