[03/12, 8:11â€¯pm] DuraiyammalG: import { useState, useEffect } from "react";
import { motion, AnimatePresence } from "framer-motion";
import { Cpu, MemoryStick, Thermometer, Wifi, Zap } from "lucide-react";
import SplashScreen from "@/components/SplashScreen";
import StatCard from "@/components/StatCard";
import TurboBoost from "@/components/TurboBoost";
import GameProfiles from "@/components/GameProfiles";
import PingTest from "@/components/PingTest";
import TemperatureMonitor from "@/components/TemperatureMonitor";
import FPSOverlay from "@/components/FPSOverlay";
import BottomNav from "@/components/BottomNav";
import SettingsScreen from "@/components/SettingsScreen";

const Index = () => {
  const [showSplash, setShowSplash] = useState(true);
  const [activeTab, setActiveTab] = useState("home");
  const [stats, setStats] = useState({
    ram: { used: 3.2, total: 6, percentage: 53 },
    cpu: 45,
    temp: 42,
    network: "Strong",
  });

  // Simulate live stats
  useEffect(() => {
    const interval = setInterval(() => {
      setStats((prev) => ({
        ram: {
          ...prev.ram,
          used: Math.max(1.5, Math.min(5.5, prev.ram.used + (Math.random() - 0.5) * 0.3)),
          percentage: Math.floor(((prev.ram.used + (Math.random() - 0.5) * 0.3) / prev.ram.total) * 100),
        },
        cpu: Math.floor(Math.max(20, Math.min(80, prev.cpu + (Math.random() - 0.5) * 10))),
        temp: Math.floor(Math.max(35, Math.min(55, prev.temp + (Math.random() - 0.5) * 3))),
        network: prev.network,
      }));
    }, 3000);

    return () => clearInterval(interval);
  }, []);

  const handleBoostComplete = (improvement: number) => {
    setStats((prev) => ({
      ...prev,
      ram: {
        ...prev.ram,
        used: Math.max(1.5, prev.ram.used - 1),
        percentage: Math.max(25, prev.ram.percentage - 15),
      },
      cpu: Math.max(20, prev.cpu - 20),
    }));
  };

  const handleProfileSelect = (profile: any) => {
    console.log("Selected profile:", profile.name);
  };

  const renderContent = () => {
    switch (activeTab) {
      case "home":
        return (
          <motion.div
            key="home"
            initial={{ opacity: 0, x: -20 }}
            animate={{ opacity: 1, x: 0 }}
            exit={{ opacity: 0, x: 20 }}
            className="space-y-4"
          >
            {/* Header */}
            <div className="flex items-center gap-3 mb-6">
              <div className="w-12 h-12 rounded-xl gradient-boost flex items-center justify-center shadow-[0_0_30px_hsl(var(--primary)/0.4)]">
                <Zap className="w-6 h-6 text-primary-foreground" fill="currentColor" />
              </div>
              <div>
                <h1 className="font-display font-bold text-2xl text-foreground">
                  <span className="text-primary text-glow-primary">rbo</span>Gamer
                </h1>
                <p className="text-xs text-muted-foreground">Performance Dashboard</p>
              </div>
            </div>

            {/* Stats Grid */}
            <div className="grid grid-cols-2 gap-3">
              <StatCard
                icon={MemoryStick}
                label="RAM Usage"
                value={`${stats.ram.used.toFixed(1)}GB`}
                subValue={`${stats.ram.total}GB Total`}
                color="primary"
                percentage={stats.ram.percentage}
              />
              <StatCard
                icon={Cpu}
                label="CPU Usage"
                value={`${stats.cpu}%`}
                color="secondary"
                percentage={stats.cpu}
              />
              <StatCard
                icon={Thermometer}
                label="Temperature"
                value={`${stats.temp}Â°C`}
                color={stats.temp > 50 ? "warning" : "accent"}
              />
              <StatCard
                icon={Wifi}
                label="Network"
                value={stats.network}
                color="primary"
              />
            </div>

            {/* Turbo Boost */}
            <TurboBoost onBoostComplete={handleBoostComplete} />

            {/* Game Profiles */}
            <GameProfiles onProfileSelect={handleProfileSelect} />

            {/* FPS Overlay */}
            <FPSOverlay />
          </motion.div>
        );

      case "boost":
        return (
          <motion.div
            key="boost"
            initial={{ opacity: 0, x: -20 }}
            animate={{ opacity: 1, x: 0 }}
            exit={{ opacity: 0, x: 20 }}
            className="space-y-4"
          >
            <h2 className="font-display font-bold text-2xl text-foreground mb-4">
              Quick <span className="text-primary">Boost</span>
            </h2>
            <TurboBoost onBoostComplete={handleBoostComplete} />
            <GameProfiles onProfileSelect={handleProfileSelect} />
          </motion.div>
        );

      case "ping":
        return (
          <motion.div
            key="ping"
            initial={{ opacity: 0, x: -20 }}
            animate={{ opacity: 1, x: 0 }}
            exit={{ opacity: 0, x: 20 }}
            className="space-y-4"
          >
            <h2 className="font-display font-bold text-2xl text-foreground mb-4">
              Network <span className="text-primary">Analysis</span>
            </h2>
            <PingTest />
          </motion.div>
        );

      case "temp":
        return (
          <motion.div
            key="temp"
            initial={{ opacity: 0, x: -20 }}
            animate={{ opacity: 1, x: 0 }}
            exit={{ opacity: 0, x: 20 }}
            className="space-y-4"
          >
            <h2 className="font-display font-bold text-2xl text-foreground mb-4">
              Thermal <span className="text-primary">Monitor</span>
            </h2>
            <TemperatureMonitor />
          </motion.div>
        );

      case "settings":
        return (
          <motion.div
            key="settings"
            initial={{ opacity: 0, x: -20 }}
            animate={{ opacity: 1, x: 0 }}
            exit={{ opacity: 0, x: 20 }}
          >
            <SettingsScreen />
          </motion.div>
        );

      default:
        return null;
    }
  };

  return (
    <>
      <AnimatePresence>
        {showSplash && <SplashScreen onComplete={() => setShowSplash(false)} />}
      </AnimatePresence>

      {!showSplash && (
        <div className="min-h-screen gradient-dark pb-24">
          <main className="max-w-lg mx-auto p-4">
            <AnimatePresence mode="wait">{renderContent()}</AnimatePresence>
          </main>

          <BottomNav activeTab={activeTab} onTabChange={setActiveTab} />
        </div>
      )}
    </>
  );
};

export default Index;
