import { Monitor, Eye, EyeOff, GripVertical } from "lucide-react";
import { Button } from "./ui/button";
import { Switch } from "./ui/switch";

const FPSOverlay = () => {
  const [isEnabled, setIsEnabled] = useState(false);
  const [showPreview, setShowPreview] = useState(false);
  const [stats, setStats] = useState({
    fps: 60,
    cpu: 45,
    gpu: 52,
    ping: 28,
    temp: 42,
  });

  useEffect(() => {
    if (!isEnabled) return;

    const interval = setInterval(() => {
      setStats({
        fps: Math.floor(Math.random() * 10) + 55,
        cpu: Math.floor(Math.random() * 20) + 40,
        gpu: Math.floor(Math.random() * 20) + 45,
        ping: Math.floor(Math.random() * 15) + 20,
        temp: Math.floor(Math.random() * 8) + 38,
      });
    }, 1000);

    return () => clearInterval(interval);
  }, [isEnabled]);

  return (
    <motion.div
      className="gaming-card cyber-border"
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
    >
      <div className="flex items-center justify-between mb-4">
        <div className="flex items-center gap-3">
          <div className="p-2 rounded-lg bg-accent/20 border border-accent/30">
            <Monitor className="w-5 h-5 text-accent" />
