import { LucideIcon } from "lucide-react";

interface StatCardProps {
  icon: LucideIcon;
  label: string;
  value: string | number;
  subValue?: string;
  color: "primary" | "secondary" | "accent" | "warning" | "destructive";
  percentage?: number;
}

const colorMap = {
  primary: {
    text: "text-primary",
    bg: "bg-primary/10",
    border: "border-primary/30",
    glow: "shadow-[0_0_20px_hsl(var(--primary)/0.2)]",
  },
  secondary: {
    text: "text-secondary",
    bg: "bg-secondary/10",
    border: "border-secondary/30",
    glow: "shadow-[0_0_20px_hsl(var(--secondary)/0.2)]",
  },
  accent: {
    text: "text-accent",
    bg: "bg-accent/10",
    border: "border-accent/30",
    glow: "shadow-[0_0_20px_hsl(var(--accent)/0.2)]",
  },
  warning: {
    text: "text-warning",
    bg: "bg-warning/10",
    border: "border-warning/30",
    glow: "shadow-[0_0_20px_hsl(var(--warning)/0.2)]",
  },
  destructive: {
    text: "text-destructive",
    bg: "bg-destructive/10",
    border: "border-destructive/30",
    glow: "shadow-[0_0_20px_hsl(var(--destructive)/0.2)]",
  },
};

const StatCard = ({ icon: Icon, label, value, subValue, color, percentage }: StatCardProps) => {
  const colors = colorMap[color];

  return (
    <motion.div
      className={`gaming-card cyber-border ${colors.glow} hover:scale-[1.02] transition-transform duration-300`}
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      whileHover={{ y: -2 }}
    >
      <div className="flex items-start justify-between">
        <div className={`p-2 rounded-lg ${colors.bg} ${colors.border} border`}>
          <Icon className={`w-5 h-5 ${colors.text}`} />
        </div>
        {percentage !== undefined && (
          <div className="flex items-center gap-1">
            <div className="w-12 h-1.5 bg-muted rounded-full overflow-hidden">
              <motion.div
                className={`h-full ${colors.bg.replace('/10', '')}`}
                style={{ background: `hsl(var(--${color}))` }}
                initial={{ width: 0 }}
                animate={{ width: `${percentage}%` }}
                transition={{ duration: 1, ease: "easeOut" }}
              />
            </div>
            <span className={`text-xs ${colors.text} font-medium`}>{percentage}%</span>
          </div>
        )}
      </div>

      <div className="mt-3">
        <p className="text-xs text-muted-foreground uppercase tracking-wider font-medium">{label}</p>
        <p className={`text-2xl font-display font-bold ${colors.text} mt-1`}>{value}</p>
        {subValue && <p className="text-xs text-muted-foreground mt-0.5">{subValue}</p>}
      </div>
    </motion.div>
  );
};

export default StatCard;
